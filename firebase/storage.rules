rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function for authentication
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Public assets (like images for marketplace listings) can be read by anyone.
    match /{allPaths=**} {
      allow read;
    }

    // User-specific files (e.g., profile pictures, private documents)
    // The user's UID should be part of the path.
    // Example path: /user-uploads/{userId}/profile.jpg
    match /user-uploads/{userId}/{allPaths=**} {
      // Only the authenticated owner of the folder can write files.
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Observation images for traceability
    match /observations/{allPaths=**} {
        allow write: if isSignedIn();
    }
    
    // Event banners
    match /agri-events/{allPaths=**} {
        allow write: if isSignedIn();
    }
  }
}
