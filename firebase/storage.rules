
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all access to all files.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access for event banners.
    match /event-banners/{fileName} {
      allow read: if true;
      // Only authenticated users can upload banners (via cloud function).
      allow write: if request.auth != null;
    }
    
    // Allow public read access for marketplace listing images.
    match /marketplace-listings/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access for user avatars.
    match /user-avatars/{userId}/{fileName} {
      allow read: if true;
      // Only the authenticated user can upload to their own avatar folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow public read for observation images.
    match /observations/{cropId}/{fileName} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    
    // Allow public read access for general feed post images.
    match /feed-posts/{userId}/{fileName} {
      allow read: if true;
      // Only the authenticated user can upload to their own feed post folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
    