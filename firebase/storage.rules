
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default-deny: No public access to files by default.
    // Allow reads and writes only for authenticated users on their own files.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Example for public read on a specific folder (e.g., marketplace images)
    match /marketplace-listings/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Allow any authenticated user to write
    }
  }
}
