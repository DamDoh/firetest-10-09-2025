rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are permissive and are intended for initial development.
    // They should be refined with more specific security logic before production.
    match /{document=**} {
      // Allow public read access to all documents.
      // This is useful for public content like marketplace listings, forums, and user profiles.
      allow read: if true;

      // Allow write access (create, update, delete) only for authenticated users.
      // In production, you should restrict this further to ensure users can only
      // write to their own documents (e.g., `if request.auth.uid == resource.data.userId`).
      allow write: if request.auth != null;
    }
  }
}
