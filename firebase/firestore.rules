
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data, but not others'.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read from these collections
    match /marketplaceItems/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // For simplicity in this demo
    }

    match /forums/{topicId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Allow authenticated users to create topics
    }
     match /forums/{topicId}/{subcollection}/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Allow authenticated users to post/reply
    }
    
    match /knowledge_base/{docId} {
      // Allow any authenticated user to read the knowledge base.
      allow read: if request.auth != null;
      // For this demo, we'll allow any authenticated user to write.
      // In production, this should be restricted to admin/curator roles.
      allow write: if request.auth != null;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
