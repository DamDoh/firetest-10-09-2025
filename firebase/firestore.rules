rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default open rules for most collections during development
    // In a production app, you would lock these down with more specific rules.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /marketplaceItems/{itemId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.sellerId;
    }
     match /forums/{topicId}/{document=**} {
      allow read: if true;
      allow create: if request.auth != null;
    }
     match /farms/{farmId}/{document=**} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
     match /crops/{cropId} {
        allow read, write: if request.auth.uid == resource.data.ownerId;
    }
     match /knf_batches/{batchId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }
     match /vti_registry/{vtiId} {
      allow read, write: if true;
    }
    match /traceability_events/{eventId} {
       allow read, write: if true;
    }
    match /agri_events/{eventId} {
       allow read, write: if true;
    }
    match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }


    // Rule for the knowledge base
    match /knowledge_base/{docId} {
      // Allow any authenticated user to read the knowledge base.
      allow read: if request.auth != null;
      // Disallow all client-side writes. Curation should happen via backend/admin SDK.
      allow write: if false;
    }
  }
}
