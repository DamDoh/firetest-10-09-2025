rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // By default, deny all reads and writes.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access for certain folders like event banners or marketplace item images.
    match /event-banners/{fileName} {
      allow read: if true;
    }
    match /marketplace-images/{fileName} {
        allow read: if true;
    }

    // Allow a user to write to their own private folder.
    // e.g., for profile pictures or private documents.
    // The path segments should match the upload paths used in the client code.
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read a user's profile picture if it's in a public subfolder.
    match /users/{userId}/public/{fileName} {
      allow read: if true;
    }

    // Allow an authenticated user to read their own private files.
    match /users/{userId}/private/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
