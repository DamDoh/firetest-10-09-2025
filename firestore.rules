rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow read/write access for any authenticated user.
    // This is a good starting point for development, but you MUST
    // implement more granular security rules before going to production.
    match /{document=**} {
      allow read, write: if request.auth.uid != null;
    }

    // Example of a more secure rule for user profiles:
    // A user can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Traceability events are immutable once created.
    match /traceability_events/{eventId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid != null; // Allow any logged-in user to read for now
      allow update, delete: if false;
    }

    // Anyone can view marketplace items, but only authenticated users can create them.
    match /marketplaceItems/{itemId} {
        allow read: if true;
        allow write: if request.auth.uid != null;
    }
  }
}
