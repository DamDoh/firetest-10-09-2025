rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These are open rules for development purposes.
    // You should implement more granular security rules to protect your data
    // before deploying to a production environment. For example, you might want
    // to restrict writes to only authenticated users:
    // allow read: if true;
    // allow write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
